{
  "swagger": "2.0",
  "info": {
    "title": "API of Logistic Management System by Tekko.id",
    "version": "0.0.1"
  },
  "schemes": [
    "https",
    "http"
  ],
  "securityDefinitions": {
    "bearerAuth": {
      "name": "Authorization",
      "in": "header",
      "type": "apiKey",
      "description": "JWT Authorization header"
    }
  },
  "security": [ { "bearerAuth": [] } ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/authentications/login": {
      "post": {
        "summary": "POST /authentications/login",
        "operationId": "Login",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "format": "string",
                  "example": "admin"
                },
                "password": {
                  "type": "string",
                  "format": "string",
                  "example": "admin"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "$ref": "#/definitions/userResponse"
                },
                "token": {
                  "type": "string",
                  "format": "string"
                }
              }
            }
          }
        },
        "tags": [
          "Authentications"
        ]
      }
    },
    "/users": {
      "get": {
        "summary": "GET /users",
        "operationId": "ListUsers",
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/userResponse"
              }
            }
          }
        },
        "tags": [
          "Users"
        ]
      },
      "post": {
        "summary": "POST /users",
        "operationId": "CreateUsers",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "default": "admin"
                },
                "password": {
                  "type": "string",
                  "default": "admin"
                },
                "name": {
                  "type": "string",
                  "default": "admin"
                },
                "role": {
                  "type": "string",
                  "default": "user",
                  "enum": ["user", "admin"]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/userResponse"
            }
          }
        },
        "tags": [
          "Users"
        ]
      }
    },
    "/users/current": {
      "get": {
        "summary": "GET /users/current",
        "operationId": "CurrentUsers",
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/userResponse"
            }
          }
        },
        "tags": [
          "Users"
        ]
      }
    },
    "/users/{id}": {
      "patch": {
        "summary": "PATCH /users",
        "operationId": "PatchUsers",
        "description": "User only can change their own account, admin can change all account",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "password": {
                  "type": "string",
                  "required": false
                },
                "name": {
                  "type": "string",
                  "required": false
                },
                "role": {
                  "type": "string",
                  "description": "Only admin can change the role",
                  "enum": ["user", "admin"],
                  "required": false
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/userResponse"
            }
          }
        },
        "tags": [
          "Users"
        ]
      },
      "delete": {
        "summary": "DELETE /users",
        "operationId": "DeleteUsers",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/messageResponse"
            }
          }
        },
        "tags": [
          "Users"
        ]
      }
    }
  },
  "definitions": {
    "userResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "string"
        },
        "username": {
          "type": "string",
          "format": "string"
        },
        "name": {
          "type": "string",
          "format": "string"
        },
        "role": {
          "type": "boolean",
          "format": "boolean"
        }
      }
    },
    "messageResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "format": "string"
        }
      }
    }
  }
}